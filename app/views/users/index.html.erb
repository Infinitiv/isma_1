<h2><span class="headline2"><%= t(:section_title, :scope => [:users]) %></span></h2>

<table>
  <tr>
    <th><%= t(:login, :scope => [:users]) %></th>
    <th><%= t(:first_name, :scope => [:users]) %></th>
    <th><%= t(:last_name, :scope => [:users]) %></th>
    <th><%= t(:email, :scope => [:users]) %></th>
    <th><%= t(:phone, :scope => [:users]) %></th>
    <th><%= t(:role, :scope => [:users]) %></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.login %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= mail_to user.email, "Написать" ,:encode => "hex" %></td>
    <td><% if user.phone? %><%= number_to_phone(user.phone, :country_code => 7)  %><% end %></td>
    <td><%= t Role.find(user.role_id).name, :scope => [:users] %></td>
    <td><%= link_to 'Show', user %><br>
    <%= link_to 'Edit', edit_user_path(user) %><br>
    <%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

