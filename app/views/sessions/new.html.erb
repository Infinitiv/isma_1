<div>
<%= form_tag do %>
  <fieldset>
    <legend>Вход в систему</legend>
    <div class="field">
      <%= label_tag :login, 'Имя' %><br />
      <%= text_field_tag :login, params[:login] %>
    </div>
    <div class="field">
      <%= label_tag :password, 'Пароль' %><br />
      <%= text_field_tag :password, params[:password] %>
    </div>
    <div>
      <%= submit_tag 'Войти' %>
    </div>
  </div>
  </fieldset>
<% end %>
</div>
